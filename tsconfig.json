{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
  },
  "extends": "./tsconfig.paths.json",
  "include": ["src"],
  
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "dist"
  ],
  "types": [
    "typePatches"
  ]
}